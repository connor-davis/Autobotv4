<Window x:Class="Autobot.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Autobot"
        mc:Ignorable="d"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True" Topmost="True" Height="200" Width="400">
    <Border Background="#FF181818" BorderBrush="#FF404040" BorderThickness="1" CornerRadius="5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Autobot" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#FFFFFFFF"></Label>
            <Label x:Name="UpdateStatus" Content="Checking for updates. Please be patient" HorizontalAlignment="Center"  Foreground="#B9B9B9"></Label>
        </StackPanel>
    </Border>
</Window>
